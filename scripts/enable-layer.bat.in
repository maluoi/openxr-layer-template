@echo off
REM Enable @LAYER_NAME@ as implicit OpenXR layer (auto-loads)

set "MANIFEST=%~dp0@LAYER_NAME@.json"
set "REG_KEY=HKCU\SOFTWARE\Khronos\OpenXR\1\ApiLayers\Implicit"

echo Enabling @LAYER_NAME@ (implicit layer)...
reg add "%REG_KEY%" /v "%MANIFEST%" /t REG_DWORD /d 0 /f >nul 2>&1

if %ERRORLEVEL% EQU 0 (
    echo âœ“ @LAYER_NAME@ enabled
    echo To disable: set DISABLE_@LAYER_NAME@=1
) else (
    echo Error: Failed to add registry entry
    echo Try running as Administrator
    exit /b 1
)
